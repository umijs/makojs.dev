  <style>
    main {
      max-width: 960px;
      margin: 0 auto;
      display: flex;
    }

    aside {
      width: 200px;
      display: none;
      transition: transform .25s;
      transform: translate(-220px);
      box-shadow: none;
    }

    .shadow {
      position: fixed;
      left: 0;
      top: 0;
      right: 0;
      bottom: 0;
      z-index: 3;
      background: rgba(0, 0, 0, 0);
      visibility: hidden;
      transition: visibility .25s, background-color .25s;
    }

    .open .shadow {
      background: rgba(0, 0, 0, .5);
      visibility: visible;
    }

    .open aside {
      display: block;
      z-index: 4;
      position: fixed;
      background: #fff;
      left: 0;
      top: 0;
      bottom: 0;
      padding-left: 12px;
      transform: translate(0);
      box-shadow: 0 0 20px rgba(0, 0, 0, .5);
    }

    aside a {
      color: #000;
    }

    nav {
      position: sticky;
      top: 60px;
    }

    nav ul {
      list-style: none;
      padding: 0;
    }

    nav ul>li {
      font-weight: bold;
      margin-bottom: 10px;
    }

