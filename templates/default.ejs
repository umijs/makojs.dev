    article {
      flex: 1;
    }

    footer {
      border-top: 1px solid #ccc;
      margin: 2em 0;
      padding: 1em 0;
      text-align: center;
    }

    .menubar {
      box-shadow: 0 0 10px rgba(0, 0, 0, .25);
      background: #fff;
      color: #222;
      display: block;
      position: fixed;
      left: -20px;
      top: 0;
      right: -20px;
      height: 50px;
      padding: 0 26px;
      z-index: 2;
    }

    .menubar a {
      display: inline-block;
    }

    @media (min-width: 800px) {
      .menubar {
        display: none;
      }

      aside {
        display: block;
        transform: translate(0);
      }
    }
  </style>
