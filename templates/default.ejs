      margin-left: 20px;
      padding-left: 0;
      margin-bottom: 1em;
    }

    article blockquote {
      font-style: italic;
      margin: 1em 0;
      padding: 0.5em 1em;
      border-left: 0.25em solid #ccc;
      background-color: #f8f8f8;
    }

    article code {
      font-family: Menlo, monospace;
      background-color: #f4f4f4;
      padding: 2px 4px;
      border-radius: 3px;
      font-size: 0.8em;
    }

    article pre {
      font-family: Menlo, monospace;
      /* why !important? since shikiji will generate inline style background */
      background: #f4f4f4 !important;
      padding: 12px 20px;
      font-size: 0.8em;
      border-radius: 3px;
      margin-bottom: 1em;
      overflow: auto;
    }

    article pre>code {
      padding: 0;
      border-radius: 0;
      font-size: 1em;
    }

    article hr {
      border: none;
      border-top: 1px solid #ccc;
      margin: 1em 0;
    }
  </style>
